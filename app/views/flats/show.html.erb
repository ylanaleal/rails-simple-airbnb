  <div class="map" style="background-image: url('<%= @flat.img_url %>')"></div>

  <div class="row margin-top-negative mx-5">
    <div class="col-sm-8">

      <div class="flat-show-card">
        <h1> <%= @flat.name %> </h1>
        <p class="flat-show-address"> <%= @flat.address %> </p>
      </div>

      <div class="flat-show-card">
        <h3>A bit more about this flat...</h3>
        <p> <%= @flat.description %> </p>
        <%# google maps API AIzaSyC_Y05rb-vF2J9J_C5IeoQsVkrzzTXjw3k %>
        <div class="map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=<%= @flat.address %>&zoom=13&scale=2&size=1000x1000&maptype=roadmap&markers=color:red%7C<%= @flat.address %>&key=AIzaSyC_Y05rb-vF2J9J_C5IeoQsVkrzzTXjw3k')"></div>
      </div>

    </div>

    <div class="col-4">

      <div class="flat-show-card">
        <h5>Book this place!</h5>

        <form action="">
          <div class="input-group">
            <span class="input-group-text" id="start-date-label">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2024" aria-label="start-date" aria-describedby="start-date-label">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-text" id="end-date-label">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2024" aria-label="end-date" aria-describedby="start-date-label">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>

      </div>

      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <%= @flat.number_of_guests %> people
          </div>
          <div class="flex ms-3">
            <%= @flat.price_per_night %>â‚¬
          </div>
        </div>
      </div>

      <div class="flat-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>
          <div class="flex">
            <i class="fa-brands fa-facebook-square me-2"></i>
            <i class="fa-brands fa-twitter-square me-2"></i>
            <i class="fa-brands fa-pinterest-square me-2"></i>
          </div>
        </div>
      </div>

      <div class="flat-show-card">
        <%= link_to 'Edit', edit_flat_path, class:"me-2 btn btn-outline-primary" %>
        <%= link_to "Delete", flat_path(@flat), class:"btn btn-outline-danger",
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>

    </div>

    </div>
  </div>
